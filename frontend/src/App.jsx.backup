import { useState } from "react";
import StockForm from "./components/StockForm";
import ReportCard from "./components/ReportCard";
import PriceChart from "./components/PriceChart";
import Tabs from "./components/Tabs";
import ConfidenceMeter from "./components/ConfidenceMeter";
import { CardSkeleton, ChartSkeleton, NewsSkeleton, ReportSkeleton } from "./components/Skeletons";
import { analyzeStock } from "./api";

export default function App() {
  const [symbol, setSymbol] = useState("");       // current stock symbol
  const [report, setReport] = useState("");       // AI report
  const [financials, setFinancials] = useState({}); // financial metrics
  const [news, setNews] = useState([]);           // news headlines
  const [chartData, setChartData] = useState([]); // price chart
  const [marketData, setMarketData] = useState({}); // market data
  const [sentiment, setSentiment] = useState(""); // news sentiment
  const [confidence, setConfidence] = useState(0);
  const [risk, setRisk] = useState("Medium");
  const [activeTab, setActiveTab] = useState("Summary");
  const [loading, setLoading] = useState(false);

  const analyze = async (symbol) => {
    setSymbol(symbol.toUpperCase());
    setLoading(true);

    // reset previous data
    setReport("");
    setFinancials({});
    setNews([]);
    setChartData([]);
    setMarketData({});
    setSentiment("");
    setConfidence(0);
    setRisk("Medium");

    try {
      const res = await analyzeStock(symbol);
      const data = res.data;

      setReport(data.report || "No report available");
      setFinancials(data.financials || {});
      setNews(data.news || []);
      setChartData(data.marketData?.prices || []);
      setMarketData(data.marketData || {});
      setSentiment(data.sentiment || "");
      setConfidence(data.confidence || 0);
      setRisk(data.risk || "Medium");
    } catch (err) {
      console.error("Analyze Error:", err);
      setReport("Error fetching report. Please try again.");
      setNews([]);
      setFinancials({});
      setChartData([]);
      setMarketData({});
      setSentiment("");
      setConfidence(0);
      setRisk("Medium");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-slate-950 text-white">
      <div className="container mx-auto px-4 py-8 max-w-7xl">
        <header className="text-center mb-8">
          <div className="flex items-center justify-center gap-4 mb-4">
            <div className="w-16 h-16 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-2xl flex items-center justify-center text-3xl shadow-lg">
              üìà
            </div>
            <div>
              <h1 className="text-4xl font-bold mb-2 bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                Multi-Agent Trading Assistant
              </h1>
              <p className="text-gray-400 text-lg">
                AI-powered stock analysis with market data, financials, news sentiment, and investment reports
              </p>
            </div>
          </div>

          {/* Status Bar */}
          {symbol && (
            <div className="bg-slate-900 border border-slate-700 rounded-lg p-4 shadow-lg max-w-md mx-auto">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-3">
                  <div className="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-sm font-bold">
                    {symbol.charAt(0)}
                  </div>
                  <div>
                    <p className="font-semibold text-white">{symbol}</p>
                    <p className="text-xs text-gray-400">Analyzed Stock</p>
                  </div>
                </div>
                <div className="text-right">
                  <p className="text-sm text-gray-400">Status</p>
                  <p className="text-green-400 font-medium">Active</p>
                </div>
              </div>
            </div>
          )}
        </header>

        {/* Stock input form */}
        <StockForm onAnalyze={analyze} />

        {/* Loading indicator */}
        {loading && (
          <div className="flex items-center justify-center py-8">
            <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-cyan-400"></div>
            <span className="ml-4 text-cyan-400 font-medium">
              AI analyzing market data for {symbol}...
            </span>
          </div>
        )}

        {/* Tabs */}
        <Tabs active={activeTab} setActive={setActiveTab} />

        {/* Summary Tab */}
        {activeTab === "Summary" && (
          <div className="space-y-8">
            {/* Quick Stats */}
            {loading ? (
              <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                <CardSkeleton />
                <CardSkeleton />
                <CardSkeleton />
              </div>
            ) : Object.keys(financials).length > 0 && (
              <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg">
                  <div className="flex items-center gap-3 mb-3">
                    <div className="w-8 h-8 bg-cyan-600 rounded-full flex items-center justify-center text-sm">üíµ</div>
                    <h3 className="font-semibold text-cyan-400">Current Price</h3>
                  </div>
                  <p className="text-2xl font-bold text-white">
                    ${marketData?.currentPrice?.toFixed(2) || 'N/A'}
                  </p>
                  <p className="text-xs text-gray-400 mt-1">Latest Trading Price</p>
                </div>

                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg">
                  <div className="flex items-center gap-3 mb-3">
                    <div className="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-sm">üìä</div>
                    <h3 className="font-semibold text-green-400">Market Cap</h3>
                  </div>
                  <p className="text-2xl font-bold text-white">
                    ${financials.marketCap?.toLocaleString() || 'N/A'}
                  </p>
                  <p className="text-xs text-gray-400 mt-1">Company Valuation</p>
                </div>

                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg">
                  <div className="flex items-center gap-3 mb-3">
                    <div className="w-8 h-8 bg-yellow-600 rounded-full flex items-center justify-center text-sm">üì∞</div>
                    <h3 className="font-semibold text-yellow-400">News Sentiment</h3>
                  </div>
                  <p className="text-2xl font-bold text-white capitalize">{sentiment || 'Neutral'}</p>
                  <p className="text-xs text-gray-400 mt-1">AI Analysis</p>
                </div>
              </div>
            )}

            {loading ? <ReportSkeleton /> : <ConfidenceMeter confidence={confidence} risk={risk} />}
            {loading ? <ReportSkeleton /> : <ReportCard report={report} />}
          </div>
        )}

        {/* Financials Tab */}
        {activeTab === "Financials" && (
          <div className="space-y-8">
            {loading ? (
              <>
                <div className="bg-gradient-to-r from-slate-900 to-slate-800 border border-slate-700 rounded-xl p-8 shadow-xl animate-pulse">
                  <div className="flex items-center gap-4 mb-4">
                    <div className="w-12 h-12 bg-slate-700 rounded-full"></div>
                    <div>
                      <div className="h-8 bg-slate-700 rounded w-48 mb-2"></div>
                      <div className="h-4 bg-slate-700 rounded w-32"></div>
                    </div>
                  </div>
                </div>
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                  <CardSkeleton />
                  <CardSkeleton />
                  <CardSkeleton />
                  <CardSkeleton />
                </div>
                <ChartSkeleton />
              </>
            ) : Object.keys(financials).length > 0 ? (
              <>
                {/* Company Header */}
                <div className="bg-gradient-to-r from-slate-900 to-slate-800 border border-slate-700 rounded-xl p-8 shadow-xl">
                  <div className="flex items-center gap-4 mb-4">
                    <div className="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-2xl">
                      üè¢
                    </div>
                    <div>
                      <h2 className="text-2xl font-bold text-white">{financials.company}</h2>
                      <p className="text-gray-400">Stock Symbol: {symbol}</p>
                    </div>
                  </div>
                </div>

                {/* Key Metrics Grid */}
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                  <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div className="flex items-center gap-3 mb-3">
                      <div className="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-sm">üí∞</div>
                      <h3 className="font-semibold text-green-400">Revenue</h3>
                    </div>
                    <p className="text-2xl font-bold text-white">${financials.revenue?.toLocaleString()}</p>
                    <p className="text-xs text-gray-400 mt-1">Annual Revenue</p>
                  </div>

                  <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div className="flex items-center gap-3 mb-3">
                      <div className="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-sm">üìà</div>
                      <h3 className="font-semibold text-blue-400">Market Cap</h3>
                    </div>
                    <p className="text-2xl font-bold text-white">${financials.marketCap?.toLocaleString()}</p>
                    <p className="text-xs text-gray-400 mt-1">Total Value</p>
                  </div>

                  <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div className="flex items-center gap-3 mb-3">
                      <div className="w-8 h-8 bg-yellow-600 rounded-full flex items-center justify-center text-sm">‚ö°</div>
                      <h3 className="font-semibold text-yellow-400">EPS</h3>
                    </div>
                    <p className="text-2xl font-bold text-white">{financials.eps}</p>
                    <p className="text-xs text-gray-400 mt-1">Earnings Per Share</p>
                  </div>

                  <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <div className="flex items-center gap-3 mb-3">
                      <div className="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center text-sm">üìä</div>
                      <h3 className="font-semibold text-purple-400">P/E Ratio</h3>
                    </div>
                    <p className="text-2xl font-bold text-white">{financials.pe}</p>
                    <p className="text-xs text-gray-400 mt-1">Price to Earnings</p>
                  </div>
                </div>

                {/* Additional Metrics */}
                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg">
                  <h3 className="text-lg font-semibold text-cyan-400 mb-4 flex items-center gap-2">
                    <span>üíé</span> Additional Metrics
                  </h3>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="flex justify-between items-center p-3 bg-slate-800 rounded-lg">
                      <span className="text-gray-300">Dividend Yield</span>
                      <span className="font-semibold text-green-400">{financials.dividend || 'N/A'}</span>
                    </div>
                  </div>
                </div>

                {/* Price Chart */}
                {chartData.length > 0 && (
                  <PriceChart data={chartData} />
                )}
              </>
            ) : (
              <div className="text-center py-16">
                <div className="text-6xl mb-4">üìä</div>
                <p className="text-gray-400 text-xl">No financial data available</p>
                <p className="text-gray-500 mt-2">Try analyzing a different stock symbol</p>
              </div>
            )}
          </div>
        )}

        {/* News Tab */}
        {activeTab === "News" && (
          <div className="space-y-6">
            {loading ? (
              <>
                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg animate-pulse">
                  <div className="h-6 bg-slate-700 rounded w-64 mb-4"></div>
                  <div className="flex items-center gap-4 mb-6">
                    <div className="h-6 bg-slate-700 rounded w-32"></div>
                    <div className="h-4 bg-slate-700 rounded w-24"></div>
                  </div>
                </div>
                <div className="grid gap-4">
                  <NewsSkeleton />
                  <NewsSkeleton />
                  <NewsSkeleton />
                </div>
              </>
            ) : news.length > 0 ? (
              <>
                <div className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg">
                  <h3 className="text-lg font-semibold text-cyan-400 mb-4 flex items-center gap-2">
                    <span>üì∞</span> Latest News & Sentiment Analysis
                  </h3>
                  <div className="flex items-center gap-4 mb-6">
                    <div className="flex items-center gap-2">
                      <span className="text-sm text-gray-400">Overall Sentiment:</span>
                      <span className={`px-3 py-1 rounded-full text-sm font-medium ${
                        sentiment === "Positive" ? 'bg-green-900 text-green-300' :
                        sentiment === "Negative" ? 'bg-red-900 text-red-300' :
                        'bg-yellow-900 text-yellow-300'
                      }`}>
                        {sentiment || 'Neutral'}
                      </span>
                    </div>
                    <div className="text-sm text-gray-400">
                      {news.length} article{news.length !== 1 ? 's' : ''} found
                    </div>
                  </div>
                </div>

                <div className="grid gap-4">
                  {news.map((item, idx) => (
                    <div key={idx} className="bg-slate-900 border border-slate-700 rounded-lg p-6 shadow-lg hover:bg-slate-800 transition-colors duration-200">
                      <div className="flex items-start gap-4">
                        <div className="flex-shrink-0">
                          <div className="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-lg">
                            üì∞
                          </div>
                        </div>
                        <div className="flex-1 min-w-0">
                          <a
                            href={item.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            className="text-blue-400 hover:text-blue-300 font-medium text-lg hover:underline block mb-2"
                          >
                            {item.title}
                          </a>
                          <div className="flex items-center gap-4 text-sm text-gray-400">
                            <span>Source: {item.source}</span>
                            <span>‚Ä¢</span>
                            <span>Article {idx + 1} of {news.length}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </>
            ) : (
              <div className="text-center py-16">
                <div className="text-6xl mb-4">üì∞</div>
                <p className="text-gray-400 text-xl">No news available</p>
                <p className="text-gray-500 mt-2">Try analyzing a different stock symbol</p>
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
